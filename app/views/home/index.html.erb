<h1>投稿一覧</h1>

<div>
  <% @posts.each do |post| %>
    <div>
      <%= post.content %>
      <br>
      <%= post.created_at.strftime("%Y年%m月%d日 %H時%M分")  %>
      <br>
      <%= post.user.try(:nickname) %>
      <% if post.user_id == current_user.id %>
        | <%= link_to("編集","home/#{post.id}/edit") %>
        | <%= link_to("削除","home/#{post.id}/destroy",method: :delete ) %>
      <% end %>
      <hr>
    </div>
  <% end %>
</div>